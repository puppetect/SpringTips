<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mybatis.CarMapper">
	<select id="search" resultType="com.example.mybatis.Car">
		select * from car
		<where>
			<if test="year !=0 and year != null">
				year = #{year}
			</if>
			<if test="make != null">
				and make=#{make}
			</if>
			<if test="model != null">
				and model = #{model}
			</if>
		</where>
	</select>
</mapper>
